<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/peopleNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/cafe24oneprettynight"
            android:gravity="center"
            android:text="아이디?"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/starCheck"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            android:isIndicator="false"
            android:theme="@style/RatingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewTime"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center|right"
                android:text="시간?"
                android:textColor="#000000"
                app:fontFamily="@font/cafe24oneprettynight" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearComent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/context1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:ems="18"
            android:enabled="false"
            android:fontFamily="@font/cafe24oneprettynight"
            android:gravity="center"
            android:hint="1234"
            android:inputType="none"
            android:lines="3"
            android:maxLength="500"
            android:scrollbars="vertical"
            android:textColor="#000000" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_input_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cafe24oneprettynight"
                android:text="0자"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_input_length_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cafe24oneprettynight"
                android:text="/50자"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reviewBossBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/main_corner"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="답글남기기"
            android:textColor="#000000"
            android:textSize="16sp" />
        <TextView
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/reviewFuseBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/main_corner"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="수정"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/reviewDeleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/main_corner"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="삭제"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bossLiner"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="ㄴ"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bossTextView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/cafe24oneprettynight"
                android:gravity="center_vertical"
                android:text="사장님"
                android:textColor="#000000"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/bossReviewEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/cafe24oneprettynight"
                android:textColor="#000000"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reviewBossSaveBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/main_corner"
                android:fontFamily="@font/cafe24oneprettynight"
                android:text="저장"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>